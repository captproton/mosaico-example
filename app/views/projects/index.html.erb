<style>
#grid {
  height: 100px;
  display: grid;
  grid-template-areas: "a a";
  gap: 10px;
  grid-auto-columns: 200px;
}

#grid > div {
  background-color: lime;
}

</style>

<p id="notice"><%= notice %></p>

<h1>Projects</h1>


<br>

<h3>
  <%= link_to 'New Project', "/mosaico/projects/versafix-1/new" %>
</h3>


<div id="grid">
  <% @projects.each do |project| %>
    <div class="item-email-template">
      <%= link_to  "#{project.template_name}-#{project.id}", 
                    "#{Mosaico.project_path(project)}", 
                    target: "_blank"  
      %>
    </div>
  <% end %>

</div>
